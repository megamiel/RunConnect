<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    tools:context=".activity.main.RunConnectMainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/black"
        android:weightSum="5">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"/>

        <com.example.runconnect.view.CircleImageView
            android:id="@+id/userInfoButton"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/mainContents"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16.5"
        android:orientation="horizontal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@color/black"
        android:weightSum="4">

        <Button
            android:id="@+id/postButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:fontFamily="sans-serif-black"
            android:text="POST"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/friendButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:fontFamily="sans-serif-black"
            android:text="FRIEND"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/rankingButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:fontFamily="sans-serif-black"
            android:text="RANK"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/runningButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:fontFamily="sans-serif-black"
            android:text="RUN"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>